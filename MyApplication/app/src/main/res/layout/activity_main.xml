<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Click me"
        android:gravity="center"
        android:id="@+id/tvNumber"
        android:textStyle="bold"
        android:textSize="50sp"
        android:onClick="generateNumber"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Очки :"
        android:id="@+id/tvScoreStatus"
        android:layout_alignTop="@+id/tVScore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/tVScoreValue"
        android:layout_alignTop="@+id/tvScoreStatus"
        android:layout_toLeftOf="@+id/tVScore"
        android:layout_toStartOf="@+id/tVScore"
        android:layout_marginRight="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Старт"
        android:id="@+id/button3"
        android:onClick="startGame"
        android:layout_below="@+id/tvNumber"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Время"
        android:id="@+id/tVScore"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/tvNumber"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/tVScore"
        android:layout_alignRight="@+id/tvNumber"
        android:layout_alignEnd="@+id/tvNumber" />

    <ProgressBar
        style="@style/ProgressBar"
        android:id="@+id/progressBar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:max="60" />

</RelativeLayout>
